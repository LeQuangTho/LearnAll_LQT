<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="toilathor" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/facebook"
            app:backgroundTint="@color/material_on_background_disabled"
            app:backgroundTintMode="add" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="#E64A19"
            android:backgroundTint="@color/white"
            android:text="toilatho"
            app:backgroundTint="@color/material_on_background_disabled"
            app:backgroundTintMode="add" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/custom_button_2"
            android:text="toilatho"
            app:backgroundTint="@color/material_on_background_disabled"
            app:backgroundTintMode="add" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/custom_button_3"
            android:text="toilatho"
            app:backgroundTint="@color/material_on_background_disabled"
            app:backgroundTintMode="add" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/custom_button_4"
            android:text="toilatho"
            app:backgroundTint="@color/material_on_background_disabled"
            app:backgroundTintMode="add" />

        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/cycle_button"
            android:text="toilatho"
            app:backgroundTint="@color/material_on_background_disabled"
            app:backgroundTintMode="add" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:background="@drawable/custom_button_5"
                android:text="toilatho"
                app:backgroundTint="@color/material_on_background_disabled"
                app:backgroundTintMode="add" />

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:background="@drawable/custom_button_6"
                android:text="toilatho"
                app:backgroundTint="@color/material_on_background_disabled"
                app:backgroundTintMode="add" />
        </LinearLayout>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/custom_button_press"
            android:text="toilatho"
            app:backgroundTint="@color/material_on_background_disabled"
            app:backgroundTintMode="add" />
    </LinearLayout>

</ScrollView>