<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".Activities.MemberActivity">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView_Member"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginBottom="1dp">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:layout_gravity="center|left"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:src="@drawable/ic_back2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingRight="10dp"
                android:text="DuyNguyen Member"
                android:textColor="@color/black"
                android:textSize="20sp" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView_CoCheThangHang"
            android:layout_width="match_parent"
            android:layout_height="70dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|left"
                android:paddingLeft="10dp"
                android:text="Cơ chế thăng hạng"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center|right"
                android:paddingRight="10dp"
                android:src="@drawable/ic_back3" />
        </androidx.cardview.widget.CardView>

        <com.google.android.material.tabs.TabLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.tabs.TabItem
                android:id="@+id/tabItem_Black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Black" />

            <com.google.android.material.tabs.TabItem
                android:id="@+id/tabItem_Silver"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Silver" />

            <com.google.android.material.tabs.TabItem
                android:id="@+id/tabItem_Gold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gold" />
        </com.google.android.material.tabs.TabLayout>
    </LinearLayout>
</ScrollView>